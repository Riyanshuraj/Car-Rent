<section class="py-5">
    <div class="container">
        <h1 style="margin: 2%; text-align: center;">Offer Rent edit</h1>
        <div style="padding: 5%;">
            <form method="POST" action="/rent/offer-rent-edit/{{rent._id}}" enctype="multipart/form-data">

                <label for="vehicleType">Choose vehicle type:</label>
                <select id="vehicleType" name="vehicleType">
                    <option selected="{{oldInputInformationAboutCarSpecifications.vehicleType}}">
                        {{rent.oldInputInformationAboutCarSpecifications.vehicleType}}</option>
                    <option value="economy">economy</option>
                    <option value="estate">estate</option>
                    <option value="luxury">luxury</option>
                    <option value="SUV">SUV</option>
                    <option value="cargo">cargo</option>

                </select>

                <div class="form-group">
                    <label for="brand">Brand</label>
                    <input type="text" name="brand" class="form-control" id="brand" aria-describedby="emailHelp"
                        placeholder="Brand..." value="{{rent.oldInputInformationAboutCarSpecifications.brand}}">
                </div>
                <div class="form-group">
                    <label for="model">Model</label>
                    <input type="text" name="model" class="form-control" id="model" aria-describedby="emailHelp"
                        placeholder="Model..." value="{{rent.oldInputInformationAboutCarSpecifications.model}}">
                </div>
                <div class="form-group">
                    <label for="constructionYear">Construction year</label>
                    <input type="text" name="constructionYear" class="form-control" id="constructionYear"
                        placeholder="Construction year..."
                        value="{{rent.oldInputInformationAboutCarSpecifications.constructionYear}}">
                </div>
                <div class="form-group">
                    <label for="fuelType">Fuel type</label>
                    <input type="text" name="fuelType" class="form-control" id="fuelType"
                        placeholder="Fuel type - petrol, diesel, hybrid, electric..."
                        value="{{rent.oldInputInformationAboutCarSpecifications.fuelType}}">
                </div>

                <div>
                    <label for="carImage">Choose image</label>
                    <input type="file" name="carImage" id="carImage" for="carImage"
                        value="{{rent.oldInputInformationAboutCarSpecifications.carImage}}">
                    {{!-- <img src="carImage" hidden class="responsive-img"> --}}
                </div>

                <div class="form-group">
                    <label for="seats">Seats</label>
                    <input min="1" max="6" name="seats" type="number" class="form-control" id="seats" placeholder=""
                        value="{{rent.oldInputInformationAboutCarSpecifications.seats}}">
                </div>
                <div class="form-group">
                    <label for="price">Price per day</label>
                    <input type="text" name="price" class="form-control" id="price" placeholder="Price..."
                        value="{{rent.oldInputInformationAboutCarSpecifications.price}}">
                </div>

                <div class="form-group">
                    <label for="phone">Phone number for contact:</label>
                    <input required type="phone" name="phone" class="form-control" id="phone"
                        placeholder="Phone number..." value="{{rent.oldInputInformationAboutCarSpecifications.phone}}">
                </div>

                <div class="form-group additional__information">
                    <label for="additionalInformation">Additional information</label>
                    <textarea style="width: 100%;border-radius: 0.25rem;" class="form-control"
                        id="additionalInformation" name="additionalInformation" rows="4" cols="50"
                        ><p>{{rent.oldInputInformationAboutCarSpecifications.additionalInformation}}</p>
                    </textarea>
                </div>

                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</section>
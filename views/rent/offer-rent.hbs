<section class="py-5">
    <div class="container">
        <h1 style="margin: 2%; text-align: center;">Offer Rent</h1>
        <div style="padding: 5%;">
            <form method="POST" action="/rent/offer-rent" enctype="multipart/form-data">

                <label for="vehicleType">Choose vehicle type:</label>
                <select id="vehicleType" name="vehicleType" required>
                    <option selected="{{oldInputInformationAboutCarSpecifications.vehicleType}}">
                        {{oldInputInformationAboutCarSpecifications.vehicleType}}</option>
                    <option value="economy">economy</option>
                    <option value="estate">estate</option>
                    <option value="luxury">luxury</option>
                    <option value="SUV">SUV</option>
                    <option value="cargo">cargo</option>

                </select>

                <div class="form-group">
                    <label for="brand">Brand</label>
                    <input required type="text" name="brand" class="form-control" id="brand"
                        aria-describedby="emailHelp" placeholder="Brand..."
                        value="{{oldInputInformationAboutCarSpecifications.brand}}">
                </div>
                <div class="form-group">
                    <label for="model">Model</label>
                    <input required type="text" name="model" class="form-control" id="model"
                        aria-describedby="emailHelp" placeholder="Model..."
                        value="{{oldInputInformationAboutCarSpecifications.model}}">
                </div>
                <div class="form-group">
                    <label for="constructionYear">Construction year</label>
                    <input required type="text" name="constructionYear" class="form-control" id="constructionYear"
                        placeholder="Construction year..."
                        value="{{oldInputInformationAboutCarSpecifications.constructionYear}}">
                </div>
                <div class="form-group">
                    <label for="fuelType">Fuel type</label>
                    <input required type="text" name="fuelType" class="form-control" id="fuelType"
                        placeholder="Fuel type - petrol, diesel, hybrid, electric..."
                        value="{{oldInputInformationAboutCarSpecifications.fuelType}}">
                </div>
                {{!-- <div class="form-group">
                    <label for="dateStart">DateStart - Time</label>
                    <input required type="text" name="dateStart" class="form-control" id="dateStart"
                        placeholder="29 December 2020 - 00:00 ...">
                </div>
                <div class="form-group">
                    <label for="dateEnd">DateEnd - Time</label>
                    <input required type="text" name="dateEnd" class="form-control" id="dateEnd"
                        placeholder="30 December 2020 - 00:00 ...">
                </div> --}}
                {{!-- <div class="form-group">
                    <label for="carImage">Car Image (to upload image from internet - right click on image then select
                        "Copy image address"</label>
                    <input required type="text" name="carImage" class="form-control" id="carImage"
                        placeholder="https://...">
                </div> --}}

                <div>
                    <label>Choose image</label>
                    <input type="file" name="carImage" for="carImage" id="carImage">
                    <img src="carImage" hidden class="responsive-img">
                </div>

                <div class="form-group">
                    <label for="seats">Seats</label>
                    <input required min="1" max="6" name="seats" type="number" class="form-control" id="seats"
                        placeholder="4..." value="{{oldInputInformationAboutCarSpecifications.seats}}">
                </div>
                <div class="form-group">
                    <label for="price">Price per day</label>
                    <input required type="text" name="price" class="form-control" id="price" placeholder="Price..."
                        value="{{oldInputInformationAboutCarSpecifications.price}}">
                </div>

                <div  class="form-group">
                    <label for="phone">Phone number for contact:</label>
                    <input required type="phone" name="phone" class="form-control" id="phone" placeholder="Phone number..."
                        value="{{oldInputInformationAboutCarSpecifications.phone}}">
                </div>

                <div class="form-group additional__information">
                    <label for="additionalInformation">Additional information</label>
                    <textarea style="width: 100%;border-radius: 0.25rem;" class="form-control" id="additionalInformation"
                        name="additionalInformation" rows="4" cols="50" 
                        value="{{oldInputInformationAboutCarSpecifications.additionalInformation}}">

                    </textarea>
                </div>

                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</section>